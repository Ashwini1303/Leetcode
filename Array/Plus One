class Solution {
    public int[] plusOne(int[] digits) {
        int number =0;
        for(int i=0;i<digits.length;i++){
            number= (number * 10) +digits[i];
        }
        int value = number +1;
        String str = value + "";
        int[] result = new int[str.length()];
        for(int i=0;i<str.length();i++){
            result[i] = str.charAt(i) -'0';
        }
        return result;
    }
}
